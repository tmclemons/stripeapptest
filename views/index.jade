extends layout

block content
    //- Creating Customer Object
    h1 Sign up for Sift
    form#customer-form(action='/customers', method='POST')
      span.customer-errors
      .form-row
        label
          span First and Last Name
          input(value='John Doe', type='text', size='30', data-stripe='display_name')
      .form-row
        label
          span Email
          input(value='John_doe@test.com', type='text', size='30', data-stripe='email')
      .form-row
        label
          span Card Number
          input(value='4242424242424242', type='text', size='20', data-stripe='number')
      .form-row
        label
          span CVC
          input(type='text', size='4', data-stripe='cvc', value='123')
      .form-row
        label
          span Expiration (MM/YYYY)
          input(type='text', size='2', data-stripe='exp-month', value='07')
        span  / 
        input(type='text', size='4', data-stripe='exp-year', value='2020')
      button(type='submit' id="subscribe") Sign-Up

    h1 Charge $10 with Stripe
    form#payment-form(action='/charge', method='POST')
      span.payment-errors
      .form-row
        label
          span Card Number
          input(value='4242424242424242', type='text', size='20', data-stripe='number')
      .form-row
        label
          span CVC
          input(type='text', size='4', data-stripe='cvc', value='123')
      .form-row
        label
          span Expiration (MM/YYYY)
          input(type='text', size='2', data-stripe='exp-month', value='07')
        span  / 
        input(type='text', size='4', data-stripe='exp-year', value='2020')
      button(type='submit' id="charge") Submit Payment

    h1 Recurring charge
    form#subscribe-form(action="/plans", method='POST')
        span.payment-errors
        span John Doe
        .form-row
            label Users
                input(id="quantity" value='8', type='text', size='30', name='quantity')
        .form-row
            label Email
                input(value='John_doe@test.com', type='text', size='30', data-stripe='email')
        button(type='submit' id="plans") Submit Customer

    h1 Get Profile Info
    span John Doe
        .form-row
            label Email
            label John_doe@test.com
        button
            a(href="/profile/customer") Get Customer Info
            
    h1 Get All Invoices
    span John Doe
        .form-row
            label Email
            label John_doe@test.com
        button
            a(href="/profile/invoices") Get Invoices
