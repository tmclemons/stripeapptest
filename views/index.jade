extends layout

block content
  script(type="text/javascript" src="/javascripts/charge.js")
  //- Creating Customer Object
  h1 Sign up for Sift
  form#payment-form1(action='/plans', method='POST')
    span.payment-errors
    .form-row
      label
        span First and Last Name
        input(value='John Doe', type='text', size='30', data-stripe='description')
    .form-row
      label
        span Plan Type
        input(value='sift-introductory', type='text', size='20', data-stripe='object')
    .form-row
      label
        span Card Number
        input(value='4242424242424242', type='text', size='20', data-stripe='number')
    button(type='submit' id="subscribe") Sign-Up
    h1 Charge $10 with Stripe
    form#payment-form2(action='/charge', method='POST')
      span.payment-errors
      .form-row
        label
          span Card Number
          input(value='4242424242424242', type='text', size='20', data-stripe='number')
      .form-row
        label
          span CVC
          input(type='text', size='4', data-stripe='cvc', value='123')
      .form-row
        label
          span Expiration (MM/YYYY)
          input(type='text', size='2', data-stripe='exp-month', value='07')
        span  / 
        input(type='text', size='4', data-stripe='exp-year', value='2020')
      button(type='submit' id="charge") Submit Payment
