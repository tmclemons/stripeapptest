extends layout

block content
  span #{invoices.total_count}
  for invoice in invoices
    form(action="/profile/invoice/invoice-item" method="GET")
      .form-row
        span #{invoice.object}: #{invoice.id}
      input(type="hidden" value="#{invoice.id}" name="ID")
      .form-row
        span Amount Due: #{invoice.amount_due}
      button(type="submit") submit

      
